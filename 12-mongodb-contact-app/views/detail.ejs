<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Kontak</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">Data kontak tidak ditemukan! <br /><a href="/contact" class="alert-link fw-normal">&laquo; Kembali ke Daftar Kontak</a></div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.phone %></h6>
          <% if (contact.email) { %>
          <p class="card-text"><%= contact.email %></p>
          <% } %>
          <a href="/contact/edit/<%= contact.name %>" class="btn btn-warning badge">Ubah</a>
          <form method="POST" action="/contact?_method=DELETE" class="d-inline">
            <input type="hidden" name="name" value="<%= contact.name %>" />
            <button type="submit" class="btn btn-danger badge" onclick="return confirm('Hapus Kontak?')">Hapus</button>
          </form>
          <!-- <a href="/contact/delete/<%= contact.name %>" class="btn btn-danger badge" onclick="return confirm('Hapus Kontak?')">Hapus</a> -->
          <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali ke Daftar Kontak</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
